<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hp.expensemanager.MainActivity"
    android:background="#42A5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Trip"
            android:id="@+id/textView1"
            android:layout_weight="0.11"
            android:background="#1e88e5"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:onClick="newTrip"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:shadowColor="#523a3a"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="#e5e5e5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="View Trip"
            android:onClick="viewTrip"
            android:id="@+id/textView2"
            android:layout_weight="0.11"
            android:background="#2196f3"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:textColor="#e5e5e5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Expense"
            android:id="@+id/textView3"
            android:layout_weight="0.11"
            android:background="#1e88e5"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:textColor="#e5e5e5"
            android:onClick="addExpense"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="View Balance"
            android:id="@+id/textView4"
            android:onClick="balance"
            android:layout_weight="0.11"
            android:background="#2196f3"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:textColor="#e5e5e5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Report"
            android:id="@+id/textView5"
            android:layout_weight="0.11"
            android:background="#1e88e5"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="report"
            android:textColor="#e5e5e5" />
    </LinearLayout>
</RelativeLayout>
