<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hp.expensemanager.ReportViewctivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="0" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Trip-Wise Expenses"
            android:id="@+id/textView1"
            android:layout_weight="0.11"
            android:background="#1e88e5"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:onClick="tripwise"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:shadowColor="#523a3a"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="#e5e5e5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Category-Wise Expenses "
            android:onClick="catwise"
            android:id="@+id/textView2"
            android:layout_weight="0.11"
            android:background="#2196f3"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:textColor="#e5e5e5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day-Wise Expenses"
            android:id="@+id/textView3"
            android:layout_weight="0.11"
            android:background="#1e88e5"
            android:backgroundTintMode="src_atop"
            android:gravity="center|center_vertical"
            android:textColor="#e5e5e5"
            android:onClick="daywise" />

    </LinearLayout>
</RelativeLayout>
